#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

void heapify(vector<int> &vec, int i, int n)
{
    int largest = i;
    int left = 2 * i + 1;
    int right = 2 * i + 2;

    if (left < n && vec[left] > vec[largest])
        largest = left;

    if (right < n && vec[right] > vec[largest])
        largest = right;

    if (largest != i)
    {
        swap(vec[i], vec[largest]);
        heapify(vec, largest, n);
    }
}

void buildHeap(vector<int> &vec)
{
    int size = vec.size();

    for (int i = size / 2 - 1; i >= 0; i--)
    {
        heapify(vec, i, size);
    }
}

void heapsort(vector<int> &vec)
{
  int size = vec.size();
  
  for(int i = size / 2 - 1; i >=0; i--)
  {
    heapify(vec, i, size);
  }
  
  for(int i = size-1; i > 0; i--)
  {
    swap(vec[i], vec[0]);
    heapify(vec, 0, i);
  }
}

int main()
{
    vector<int> arr = {6, 3, 5, 4, 2, 13, 10, 9, 8, 15, 17};
    buildHeap(arr);

    cout << "Max Heap array:" << endl;
    for (int i = 0; i < arr.size(); i++)
    {
      cout << arr[i] << " ";
      
    }
    cout << endl;
    
    heapsort(arr);
    cout << "Sorted Heap array:" << endl;
    for (int i = 0; i < arr.size(); i++)
    {
      cout << arr[i] << " ";
      
    }
    cout << endl;
    
    return 0;
}
