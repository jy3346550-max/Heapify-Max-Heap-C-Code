#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

void heapify(vector<int> &vec, int i, int n)
{
    int largest = i;
    int left = 2 * i + 1;
    int right = 2 * i + 2;

    if (left < n && vec[left] > vec[largest])
        largest = left;

    if (right < n && vec[right] > vec[largest])
        largest = right;

    if (largest != i)
    {
        swap(vec[i], vec[largest]);
        heapify(vec, largest, n);
    }
}

void buildHeap(vector<int> &vec)
{
    int size = vec.size();

    for (int i = size / 2 - 1; i >= 0; i--)
    {
        heapify(vec, i, size);
    }
}

int main()
{
    vector<int> arr = {1, 3, 5, 4, 6, 13, 10, 9, 8, 15, 17};

    buildHeap(arr);

    cout << "Max Heap array:\n";
    for (int i = 0; i < arr.size(); ++i)
        cout << arr[i] << " ";
    cout << "\n";

    return 0;
}
